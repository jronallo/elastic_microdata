<h1>Itemtype: <%= params['id'] %></h1>

<h2>Properties Facet</h2>

<%= render :partial => 'facet', :locals => {:facet => @properties} %>

<hr>

<h2>Names Facet</h2>
<%= render :partial => 'facet', :locals => {:facet => @names} %>

<hr>



<ul>
  <% @hits.each do |hit| %>
    <li>
      <% if !hit.properties['name'].blank? %>
        <% if !hit.properties['name'].blank? %>
          <%= link_to hit.properties['name'].join(" AND "), hit.properties['url'].first %>
        <% else %>
          <%= hit.properties['name'].join(" AND ") %>
        <% end -%>
      <% else %>
        <%= debug hit.properties %>
      <% end -%>
      <% if !hit.properties['image'].blank? %>
        <%= image_tag hit.properties['image'].first, :width => 400 %>
      <% end -%>
      <%#= debug hit.properties %>
    </li>
  <% end -%>
</ul>

<%= link_to 'next page', itemtype_path(params['id'], :page => @page + 1) %>

<p>Count: <%= @hits.size %></p>